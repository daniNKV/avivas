    <%= yield %>
  </div>
  <div class="drawer-side fixed left-0 top-0 h-full">
    <label for="sidebar-drawer" aria-label="close sidebar" class="drawer-overlay"></label>
    <ul class="menu text-base-content sticky left-0 top-0 rounded-box w-80">
      <li><a>
        <i class="fa-solid fa-house"></i>
        Item 1
      </a></li>
      <li>
        <details open>
          <summary>Parent</summary>
          <ul>
            <li><a>Submenu 1</a></li>
            <li><a>Submenu 2</a></li>
            <li>
              <details open>
                <summary>Parent</summary>
                <ul>
                  <li><a>Submenu 1</a></li>
                  <li><a>Submenu 2</a></li>
                </ul>
              </details>
            </li>
          </ul>
        </details>
      </li>
      <li><a>Item 3</a></li>
    </ul>
  </div>
</div>
<% end %>

<%= render template: 'layouts/application' %>


