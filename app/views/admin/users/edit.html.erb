<% content_for :title, "Updating User" %>

<section class="w-full">
  <header class="flex justify-between">
    <h1 class="font-bold text-4xl">Editing user</h1>
    <%= link_to admin_users_path, class: "btn btn-ghost" do %>
      <i class="fas fa-arrow-left"></i> Back to users
    <% end %>
  </header>

  <article class="max-w-lg">
    <%= link_to "Show this user", [:admin, @user], class: "btn btn-ghost" %>

    <%= render "form", user: @user %>

  </article>

</section>
