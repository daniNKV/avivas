<% content_for :title, "Updating profile" %>

<section class="w-full">
  <header class="flex justify-between">
    <h1 class="font-bold text-4xl">
      <i class="fa-solid fa-user-pen pr-2"></i>
      Updating Profile
    </h1>
    <%= link_to admin_public_profile_path(current_user.username), class: "btn btn-ghost" do %>
      <i class="fas fa-arrow-left"></i> Back to profile
    <% end %>
  </header>

  <article class="max-w-lg mx-auto">
    <%= render "user_form", user: @user %>
  </article>

</section>


