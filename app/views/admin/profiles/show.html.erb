<% content_for :title do %>
  Profile Settings
<% end %>

<section class="hero">
  <div class="hero-content text-center">
    <div class="max-w-md">
      <div class="h-auto w-[200px] rounded-full mx-auto">
        <%= image_tag @user.avatar_url, alt: "#{@user.username}'s avatar", class: "user-avatar" %>
      </div>
      <h1 class="text-5xl font-bold pt-4"><%= @user.username %></h1>
      <h2 class="text-2xl"><%= @user.full_name %>
        <br>
      </h2>
      <p class="badge badge-secondary badge-lg p-4 rounded-lg">Member since: <%= @user.joined_at %></p>
      <p class="badge badge-secondary badge-lg p-4 rounded-lg">
        <%= @user.role.capitalize %>
      </p>
      <p class="py-6">
        <%= @user.bio %>
      </p>

      <% if current_user == @user %>
        <%= link_to admin_profiles_edit_path, class: "btn btn-primary w-full" do %>
          <i class="fa-solid fa-pencil"></i>
          Update
        <% end %>
      <% end %>
    </div>
  </div>
</section>
