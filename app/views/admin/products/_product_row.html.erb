<tr>
  <td>
    <div class="flex items-center gap-3">
      <div class="avatar">
        <div class="mask mask-squircle h-12 w-12">
          <img src="<%= product.product_image_url %>" alt="Product Image" />
          <div class="bg-gray-100 mask mask-squircle h-12 w-12"></div>
        </div>
      </div>
    </div>
  </td>
  <td>
    <div>
      <div class="font-bold"><%= product.name %></div>
      <div class="text-sm opacity-50"></div>
    </div>
  </td>
  <td>
    <%= product.stock_quantity %>
  </td>
  <td>
    <span class="badge badge-secondary p-4 rounded-lg badge-sm">
      <%= humanize_published product.published %>
    </span>
  </td>
  <th>
    <%= link_to "details", [:admin, product], class: "btn btn-ghost btn-md text-xs" %>
  </th>
</tr>