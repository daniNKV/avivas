<div id="<%= dom_id product %>" class="card lg:card-side bg-base-100 shadow">
  <div class="card-body">
    <h2 class="card-title"><%= product.name %></h2>
    <p><%= product.description %></p>
    <p>Price: <%= number_to_currency(product.base_price) %></p>
    <p>Stock: <%= product.stock_quantity %></p>
    <p>Published: <%= product.published ? 'Yes' : 'No' %></p>
    <% if product.deleted %>
      <p>Deleted At: <span class="badge badge-lg badge-error"><%= product.deleted_at %></p>
    <% end %>
    <p>Created at: <%= time_ago_in_words(product.created_at) %> ago</p>
    <p>Updated at: <%= time_ago_in_words(product.updated_at) %> ago</p>

  </div>

  <figure class="card-figure max-w-md">
    <%= image_tag product.product_image_url, class: "" %>
  </figure>
</div>
