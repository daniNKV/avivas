<% content_for :title, "Updating Product" %>

<section class="w-full">
  <header class="flex justify-between">
    <h1 class="font-bold text-4xl">
      <i class="fa-solid fa-user-pen pr-2"></i>
      Editing user
    </h1>
    <%= link_to admin_products_path, class: "btn btn-ghost" do %>
      <i class="fas fa-arrow-left"></i> Back to products
    <% end %>
  </header>

  <%= link_to [:admin, @product], class: "btn btn-ghost mx-auto pl-0 hover:bg-transparent" do %>
    Show this user
    <i class="fas fa-eye text-xl"></i>
  <% end %>
  <article class="max-w-lg mx-auto">
    <%= render "form", product: @product %>
  </article>

</section>
