<div id="clearance" class="password-reset flex flex-col gap-4">
  <h1 class="title text-xl flex flex-col">
    <%= t(".title") %>
    <span class="prose"><%= t(".description") %></span>
  </h1>

  <%= form_for :password, url: passwords_path, class:"flex flex-col gap-4" do |form| %>
    <div class="text-field flex flex-col gap-2">
      <%= form.label :email, class: "label"%>
      <%= form.email_field :email, class: "input input-bordered w-full max-w-md", placeholder: "your-email@email.com"%>
    </div>

    <div class="submit-field">
      <%= form.submit class: "btn btn-ghost w-full max-w-md"%>
    </div>
  <% end %>
</div>
